<div class="text-center">
<h2>Forgot your password?</h2>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-outline mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",type:"email" , class:"form-control", placeholder:"Enter yout email"%>
  </div>

<div class="actions text-center">
    <%= f.submit "Send me reset password instructions" ,type:"button", class:"btn btn-primary btn-block mb-4"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  <!-- Register buttons -->
  
  </div>

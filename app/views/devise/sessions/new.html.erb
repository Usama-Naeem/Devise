<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>
          <!-- Email input -->
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field form-outline mb-4">
                <%= f.label :email ,class:"form-label"%><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email",type:"email",class:"form-control form-control-lg" %>
              </div>

          <!-- Password input -->
          <div class="field form-outline mb-4">
          <%= f.label :password ,class:"form-label"%><br />
            <%= f.password_field :password, autocomplete: "current-password",type:"password",class:"form-control form-control-lg"%>
          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">
 
        <!-- Checkbox -->
             <% if devise_mapping.rememberable? %>
            <div class="field form-check">
              <%= f.check_box :remember_me, class:"form-check-input", type:"checkbox"%>
              <%= f.label :remember_me, class:"form-check-label" %>
            </div>
            <% end %>

            <a href="http://localhost:3000/users/password/new">Forgot password?</a>
          </div>

          <!-- Submit button -->
           <div class="actions">
           <%= f.submit "Log in",class:"btn btn-primary btn-lg btn-block"%>
           </div>
           <% end %>
           <%= render "devise/shared/links" %>
      </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Phone image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>